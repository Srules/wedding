= simple_form_for song, html: { class: 'form-inline' } do |form|
  - if song.errors.any?
    #error_explanation
      %h2
        = pluralize(song.errors.count, "error")
        prohibited this song from being saved:
      %ul
        - song.errors.full_messages.each do |message|
          %li= message

  = form.input :title
  = form.input :artist
  = form.input :url
  = form.input :suggested_by

  = form.submit
